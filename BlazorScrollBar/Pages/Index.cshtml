@page "/"

<h1>Hello, world!</h1>

Welcome to your new scrollbar parade...

<h1>@positionx</h1>

<input type="range" min="0" max="99" step="1" value="@positionx" oninput=@position class="slider" />

<h1>@positionx2</h1>
<div style="width:100%;max-width:100%;height:200px;border:red;overflow:hidden;">
    <div style="width:200%;transform:translateX(@(divleft)vw);transition:all;">
        <table border="1" style="width:100%;">
            <tr><th>One</th><th>Two</th><th>Three</th></tr>
            <tr><td>One</td><td>Two</td><td>Three</td></tr>
            <tr><td>One</td><td>Two</td><td>Three</td></tr>
            <tr><td>One</td><td>Two</td><td>Three</td></tr>
            <tr><td>One</td><td>Two</td><td>Three</td></tr>
            <tr><td>One</td><td>Two</td><td>Three</td></tr>
            <tr><td>One</td><td>Two</td><td>Three</td></tr>
        </table>
    </div>
</div>
<input type="range" min="0" max="99" step="1" value="@positionx2" oninput=@position2 class="slider2" />

@functions
{
  int divleft;
  int positionx;
  int positionx2;
  void position(UIChangeEventArgs args)
  {
      int.TryParse(args.Value.ToString(), out positionx);
  }
  void position2(UIChangeEventArgs args)
  {
      int.TryParse(args.Value.ToString(), out positionx2);
      divleft = positionx2 * -1;
  }
}