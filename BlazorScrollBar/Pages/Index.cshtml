@page "/"

<h1>Hello, world!</h1>

Welcome to your new scrollbar parade...

<h1>@positionx</h1>

<BlazorScrollBar Minimum="0" Maximum="99" Position="@positionx" OnScrollBarMove="@position" ScrollBarClass="sb-accessible"/>

<h1>@positionx2</h1>
<div style="position:relative;width:100%;max-width:100%;height:200px;;overflow:hidden;padding-right:1px;">
    <div style="transform:translateX(@(divleft)%);">
        <table border="1" style="width:200%;">
            <tr><th>One</th><th>Two</th><th>Three</th></tr>
            <tr><td>One</td><td>Two</td><td>Three</td></tr>
            <tr><td>One</td><td>Two</td><td>Three</td></tr>
            <tr><td>One</td><td>Two</td><td>Three</td></tr>
            <tr><td>One</td><td>Two</td><td>Three</td></tr>
            <tr><td>One</td><td>Two</td><td>Three</td></tr>
            <tr><td>One</td><td>Two</td><td>Three</td></tr>
        </table>
    </div>
</div>
<BlazorScrollBar Minimum="0" Maximum="100" Position="@positionx2" OnScrollBarMove="@position2" ThumbWidth="64px"/>

@functions
{
    int divleft;
    int positionx;
    int positionx2;
    void position(int value)
    {
        positionx = value;
        StateHasChanged();
    }
    void position2(int value)
    {
        positionx2 = value;
        divleft = positionx2 * -1;
        StateHasChanged();
    }
}